# AWS Configuration
# NEVER commit actual credentials - use AWS CLI config or IAM roles instead
AWS_REGION=us-east-1
AWS_PROFILE=default

# S3 Configuration
S3_BUCKET_NAME=congress-disclosures
S3_BRONZE_PREFIX=bronze
S3_SILVER_PREFIX=silver
S3_GOLD_PREFIX=gold

# Lambda Configuration (for local testing)
LAMBDA_TIMEOUT=300
LAMBDA_MEMORY_MB=1024

# SQS Configuration
SQS_QUEUE_NAME=house-fd-extract-queue
SQS_DLQ_NAME=house-fd-extract-dlq

# Extraction Configuration
EXTRACTION_VERSION=1.0.0
TEXTRACT_MAX_PAGES_SYNC=10
PYPDF_FALLBACK_ENABLED=true

# CloudWatch Configuration
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30

# API Configuration (Phase 2)
# API_KEY=  # Generate with: openssl rand -hex 32
# API_RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# EXTERNAL API KEYS (Gold Layer Enrichment)
# =============================================================================

# Congress.gov API - Member enrichment (bioguide IDs, party, committees)
# Get your free API key from: https://api.congress.gov/sign-up/
# Rate limit: 5,000 requests per hour
CONGRESS_API_KEY=your_congress_api_key_here

# Coinbase API - Crypto asset classification
# Get your API key from: https://portal.cdp.coinbase.com/access/api
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_api_secret_here

# Yahoo Finance - No API key needed (using yfinance library)
# Used for: Ticker validation, sector/industry classification, market cap

# Alternative Stock APIs (optional)
# IEX Cloud: https://iexcloud.io/ (500k calls/month free tier)
# IEX_CLOUD_API_KEY=your_iex_api_key_here

# AlphaVantage: https://www.alphavantage.co/ (500 calls/day free tier)
# ALPHA_VANTAGE_API_KEY=your_alphavantage_api_key_here

# =============================================================================
# ENRICHMENT CONFIGURATION
# =============================================================================
# Enable/disable specific enrichment sources
ENABLE_CONGRESS_API_ENRICHMENT=true
ENABLE_STOCK_API_ENRICHMENT=true
ENABLE_CRYPTO_API_ENRICHMENT=false

# Caching configuration (reduce API calls and stay within rate limits)
ENRICHMENT_CACHE_TTL_HOURS=168  # 1 week

# =============================================================================
# DATA QUALITY THRESHOLDS
# =============================================================================
# Minimum confidence score for automated processing
MIN_CONFIDENCE_SCORE=0.85

# Threshold for "hard to process" flagging (% image-based PDFs)
IMAGE_PDF_WARNING_THRESHOLD=0.30  # 30%

# Document quality score weighting
QUALITY_WEIGHT_CONFIDENCE=0.4
QUALITY_WEIGHT_FORMAT=0.3
QUALITY_WEIGHT_COMPLETENESS=0.3

# Environment
ENVIRONMENT=development  # development, staging, production

# Project Metadata
PROJECT_NAME=congress-disclosures-standardized
MANAGED_BY=terraform
