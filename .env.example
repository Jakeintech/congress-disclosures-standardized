# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your_aws_account_id_here

# Project Configuration
PROJECT_NAME=congress-disclosures
ENVIRONMENT=development
S3_BUCKET_NAME=congress-disclosures-standardized

# Terraform Configuration
TF_VAR_aws_region=us-east-1
TF_VAR_environment=development
TF_VAR_project_name=congress-disclosures

# Lambda Layer ARNs (optional - provide your own custom layers)
# TF_VAR_tesseract_layer_arn=arn:aws:lambda:us-east-1:YOUR_ACCOUNT:layer:tesseract-ocr:VERSION
# TF_VAR_python_custom_dependencies_layer_arn=arn:aws:lambda:us-east-1:YOUR_ACCOUNT:layer:python-custom-dependencies:VERSION
# TF_VAR_pydantic_layer_arn=arn:aws:lambda:us-east-1:YOUR_ACCOUNT:layer:pydantic-2-10-4:VERSION

# Lambda Configuration
LOG_LEVEL=INFO
EXTRACTION_VERSION=1.0.0

# Congress.gov API Configuration
CONGRESS_API_KEY=your_congress_api_key_here
CONGRESS_API_BASE_URL=https://api.congress.gov/v3

# Optional: Slack/Discord Webhooks for Alerts
# ALERT_WEBHOOK_URL=https://hooks.slack.com/...
